{
	"name": "test-express-ssr",
	"version": "1.0.0",
	"author": "Andrew(cc6.magister@gmail.com)",
	"license": "MIT",
	"scripts": {
		"dev": "npm-run-all -p -r webpack:* & (sleep 0 && npm run start)",
		"build": "webpack --config webpack.client.js && webpack --config webpack.server.js --mode=production",
		"serve": "node build/bundle.js --mode=development",
		"show_lint": "eslint src --ext .js,.jsx",
		"lint": "eslint --fix src --ext .js,.jsx",
		"webpack:server": "webpack --config webpack.server.js --watch --mode=development",
		"webpack:client": "webpack --config webpack.client.js --watch --mode=development",
		"start": "nodemon --watch --exec node build/bundle.js --mode=development"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.1",
		"@babel/core": "^7.10.1",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.10.1",
		"@babel/preset-react": "^7.10.1",
		"babel-loader": "^8.1.0",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"eslint": "^6.3.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.20.0",
		"nodemon": "^2.0.4",
		"npm-run-all": "^4.1.5",
		"react-scripts": "^3.4.1",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@babel/polyfill": "^7.10.1",
		"body-parser": "^1.19.0",
		"eslint-plugin-react-hooks": "^2.5.0",
		"express": "^4.17.1",
		"isomorphic-fetch": "^2.2.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-helmet": "^6.0.0",
		"react-loadable": "^5.5.0",
		"react-loadable-ssr-addon": "^0.2.2",
		"react-redux": "^7.2.0",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"redux": "^4.0.5",
		"redux-devtools-extension": "^2.13.8",
		"redux-thunk": "^2.3.0",
		"webpack-node-externals": "^1.7.2"
	}
}
